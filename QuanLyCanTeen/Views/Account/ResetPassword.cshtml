@model QuanLyCanTeen.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LoginLayoutPartial.cshtml";
}

<h3>Reset password</h3>
<p>Reset your password.</p>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)
    <input class="form-control" type="text" name="Email" placeholder="E-mail Address" required>
    <input class="form-control" type="password" name="Password" placeholder="Password" required>
    <input class="form-control" type="password" name="ConfirmPassword" placeholder="Confirm Password" required>
    <div class="form-button">
        <button id="submit" type="submit" class="ibtn">Reset</button>
    </div>
}
