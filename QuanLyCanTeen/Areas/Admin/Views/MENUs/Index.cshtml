@model PagedList.IPagedList<QuanLyCanTeen.Models.MENU>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="row">
        <div class="col-md-7">
            @using (Html.BeginForm("Index", "MENUs", FormMethod.Get))
            {
                <input class="form-control" type="text" value="@ViewBag.SearchString" name="searchString" placeholder="What you looking for..." aria-label="Search">
            }
        </div>
        <div class="col-md-5">
            <a class="btn btn-info" href="@Url.Action("Create","MENUs")">Create Menu</a>
        </div>
    </div>
    <br />
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().DATE)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().QUANTITY)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().PRICE)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().STATUS)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().ACCOUNT.EMAIL)
                </center>
            </th>
            <th>
                <center>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().FOOD.FOOD_CODE)
                </center>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.DATE)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.QUANTITY)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.PRICE)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.STATUS)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.ACCOUNT.EMAIL)
                    </center>
                </td>
                <td>
                    <center>
                        @Html.DisplayFor(modelItem => item.FOOD.FOOD_CODE)
                    </center>
                </td>
                <td>
                    <center>
                        <a class="btn btn-primary btn-xs" href="@Url.Action("Edit", new { id = item.ID } )">Edit</a>
                        <a class="btn btn-danger btn-xs" href="@Url.Action("Delete", new { id = item.ID })">Delete</a>
                    </center>
                </td>
            </tr>
        }

    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
