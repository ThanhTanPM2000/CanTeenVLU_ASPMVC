@using QuanLyCanTeen.Areas.Admin.Data
@{
    var user = Session["USER_SECTION"] as UserLogin;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Collapsible sidebar using Bootstrap 3</title>

    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="~/Content/style5.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">

    <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Welcome @user.FULL_NAME</h3>
            </div>

            <ul class="list-unstyled components">
                <p>CanTeen VLU</p>
                <li>
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false">Management</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        @if (user.ROLE == 1 || user.ROLE == 2)
                        {
                            <li>
                                <a href="@Url.Action("Index", "CATEGORies")">Categories</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "FOODs")">Foods</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Customers")">Customers</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "FACULTies")">Faculties</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "MENUs")">Menus</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "SLIDERs")">Sliders</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "CONTACTs")">Contacts</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "ACCOUNTs")">Accounts</a>
                            </li>
                        }
                        @if (user.ROLE == 1 || user.ROLE == 3)
                        {
                            <li>
                                <a href="@Url.Action("Index", "ORDERs")">Orders</a>
                            </li>
                        }
                    </ul>
                </li>
                <li>
                    <a href="#pageSubmenu">Statistical</a>
                </li>
            </ul>

            <ul class="list-unstyled CTAs">
                <li><a href="@Url.Action("Logout","Login")" class="download">Logout</a></li>
            </ul>
        </nav>

        <!-- Page Content Holder -->
        <div id="content">
            <nav class="navbar navbar-default">
                <div class="container-fluid">

                    <div class="navbar-header">
                        <button type="button" id="sidebarCollapse" class="navbar-btn">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            @if (user.ROLE == 1 || user.ROLE == 2)
                            {
                                <li><a href="@Url.Action("Index", "CATEGORies")">Categories</a></li>
                                <li><a href="@Url.Action("Index", "FOODs")">Foods</a></li>
                                <li><a href="@Url.Action("Index", "Customers")">Customers</a></li>
                                <li><a href="@Url.Action("Index", "FACULTies")">Faculties</a></li>
                                <li><a href="@Url.Action("Index", "MENUs")">Menus</a></li>
                                <li><a href="@Url.Action("Index", "SLIDERs")">Sliders</a></li>
                                <li><a href="@Url.Action("Index", "CONTACTs")">Contacts</a></li>
                                <li><a href="@Url.Action("Index", "ACCOUNTs")">Accounts</a></li>
                            }
                            @if (user.ROLE == 1 || user.ROLE == 3)
                            {
                                <li><a href="@Url.Action("Index", "ORDERs")">Orders</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>


            @RenderBody()
            <br />

            <p><b>Note:</b> Please consider carefully before performing the operation to add, update, delete. Data will change and cannot be recovered. Some data from one table will refer to another, please make sure the referenced data has been removed before deleting.</p>
        </div>
    </div>


    <!-- jQuery CDN -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Bootstrap Js CDN -->

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $(this).toggleClass('active');
            });
        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/notify/0.4.2/notify.min.js"></script>

    <script src="~/Plugins/ckfinder/ckfinder.js"></script>
    <script src="~/Plugins/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            notify();
        });
        function notify() {
            $.notify("@Html.Raw(TempData["AlertMessage"])", "@Html.Raw(TempData["Type"])");
        }
    </script>
    <script>
        $(function () {
            $("#example1").DataTable();
            setTimeout(function () {
                $("#toastsContainerTopRight").hide();
            }, 3000);
        });
    </script>

    @RenderSection("ckFinder", required: false)
</body>
</html>
